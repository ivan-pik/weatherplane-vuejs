extends ../layout.pug

block content
  h1.greeting New password

  .panel.panel-default
    .panel-heading
      h2.panel-title Enter new password

    .panel-body
      - var token = form.token;
      - var username = form.username;
      form(
         action='/login/new-password/'
         method='POST'
      )
        .form-group
          label Password
          input.form-control(
            type='password'
            name='password'
            placeholder='Enter the password'
          )

        .form-group
          label Repeat Password
          input.form-control(
            type='password'
            name='confirmPassword'
            placeholder='Enter the password'
          )

        input(
            type='text'
            name='token'
            value=token
            hidden
        )
        input(
            type='text'
            name='userID'
            value=username
            hidden
        )

        input.btn.btn-primary(
          type='submit'
          value='Update password'
        )
